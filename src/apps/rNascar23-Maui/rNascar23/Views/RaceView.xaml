<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:rNascar23.Views"
             x:Class="rNascar23.Views.RaceView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="225"/>
        </Grid.ColumnDefinitions>
        <local:RpqHeader Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>
        <local:LeaderboardView Grid.Column="0" Grid.Row="1"/>
        <local:VerticalGridView Grid.Column="1" Grid.Row="1" BackgroundColor="Black" />
        <local:HorizontalGridView Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2" BackgroundColor="Black" />
    </Grid>
</ContentView>
