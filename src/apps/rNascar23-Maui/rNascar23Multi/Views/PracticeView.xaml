<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:rNascar23Multi.Views"
             x:Class="rNascar23Multi.Views.PracticeView">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75" />
            <RowDefinition Height="*" />
            <RowDefinition Height="225" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <views:RpqHeaderView Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"/>

        <views:LeaderboardView Grid.Column="0" Grid.Row="1"
            BackgroundColor="Pink" />

        <views:VerticalGridView 
            ViewType ="Practice"
            Grid.Column="1" Grid.Row="1"/>

        <views:HorizontalGridView
            ViewType ="Practice"
            Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>
    </Grid>
</ContentView>
